@inject ModerBazarGroceryShop.Repository.CategoryRepository _category;
@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Home Page";
}
@*---------Carousel_Section_Start-----------*@
<section id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="4" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="5" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/image/homePageBanner/homeBanner.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/image/homePageBanner/homeBanner1.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/image/homePageBanner/homeBanner2.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/image/homePageBanner/homeBanner3.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/image/homePageBanner/homeBanner4.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/image/homePageBanner/homeBanner5.png" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</section>
@*---------Carousel_Section_End-----------*@

@*------CategorySection_Start--------*@
<style>
    #categoryimg:hover {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
    #categorytext:hover {
        font-size: larger;
        font-weight:bold;
    }
</style>
<div class="py-4 bg-light">
    <div class="container">
        <h3 class="display-10" style="color: #c89100">আমাদের পন্য</h3>
        <div class="row">
            @foreach (var item in await _category.GetAllCategories())
            {
                <div class="col-3">
                    <a id="categorytext" class="text-decoration-none" asp-controller="Product" asp-action="GetByCategory" asp-route-id="@item.CategoryID">
                        <img id="categoryimg" src="@item.CategoryImage" style="width:100%" />
                        <p class="text-center" style="color: #848387">@item.CategoryName</p>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
@*------CategorySection_end--------*@

