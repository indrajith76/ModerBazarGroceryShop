@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "GetAllCategories";
}

<div class="py-5 bg-light">
    <div class="container">
        <h3 class="display-4">GetAllCategories</h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Category</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.CategoryID</th>
                    <td>@item.CategoryName</td>
                    <td><a href="getproduct/@item.CategoryID" class="btn btn-primary">Details</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

