@model CategoryModel
@{
    ViewData["Title"] = "EditCategory";
}

<div class="container">
    <h3 class="display-4">EditCategory</h3>
    <hr />
    <form method="post" asp-action="EditNewCategory" asp-controller="Category">
        <div class="row">
            <input type="hidden" asp-for="CategoryID" />
            <div class="form-group col-md-12">
                <label asp-for="CategoryName"></label>
                <input asp-for="CategoryName" value="@Model.CategoryName" class="form-control" />
            </div>
        </div><br />
        <div class="row">
            <div class="form-group col-md-6">
                <input type="submit" value="Save Category" class="btn btn-warning" />
            </div>
        </div>
    </form>
</div>

